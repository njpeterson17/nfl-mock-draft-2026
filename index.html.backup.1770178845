        .trade-value-display.unfair {
            color: var(--warning);
        }

        .active-trades {
            margin-top: 1.5rem;
        }

        .active-trades h4 {
            font-family: 'Oswald', sans-serif;
            margin-bottom: 1rem;
            color: var(--accent);
        }

        .trade-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            background: rgba(0,0,0,0.2);

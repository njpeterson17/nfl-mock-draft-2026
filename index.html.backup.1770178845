        }

        .pos-grade {
            text-align: center;
            font-family: 'Oswald', sans-serif;
            font-size: 1rem;
            font-weight: 700;
            color: var(--accent);
        }

        .pos-summary {
            font-size: 0.8rem;
            color: var(--text-secondary);
            font-style: italic;
            line-height: 1.4;
        }

        @media (max-width: 768px) {
            .big-board-item {
                grid-template-columns: 40px 1fr 60px;
                gap: 0.75rem;
            }
            
            .big-board-item .bb-grade,
            .big-board-item .bb-tier {
                display: none;
            }

            .pos-rank-item {
                grid-template-columns: 40px 1fr 60px;
            }
            
            .pos-rank-item .pos-summary {
                display: none;
            }
        }
    </style>
</head>

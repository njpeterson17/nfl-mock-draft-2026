        }

        .trade-pick-item.selected {
            background: rgba(0,212,255,0.1);
            border-color: var(--accent);
        }

        .trade-pick-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: var(--accent);

        .trade-center {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .trade-arrow {
            font-size: 2rem;
            color: var(--accent);
        }

        .trade-btn {
            background: var(--accent);
            color: var(--primary);
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .trade-btn:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
        }

        .trade-btn:disabled {
            background: var(--border);
